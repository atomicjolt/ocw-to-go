{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "tmp/ts",
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "dom",
      "webworker"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
